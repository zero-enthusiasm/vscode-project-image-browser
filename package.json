{
    "name": "vscode-project-image-browser",
    "displayName": "vscode-project-image-browser",
    "description": "An extension for browsing all the images in your current project with directory grouping, filtering and other options.",
    "publisher": "jrthomas",
    "repository": {
        "type": "git",
        "url": "https://github.com/zero-enthusiasm/vscode-project-image-browser.git"
    },
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.51.0"
    },
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "vscode-project-image-browser.ViewImages",
                "title": "View Project Images"
            },
            {
                "command": "vscode-project-image-browser.CopyName",
                "title": "Copy Name"
            },
            {
                "command": "vscode-project-image-browser.CopyRelativePath",
                "title": "Copy Relative Path"
            },
            {
                "command": "vscode-project-image-browser.CopyFullPath",
                "title": "Copy Full Path"
            },
            {
                "command": "vscode-project-image-browser.OpenImageFile",
                "title": "Open in Default App"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "when": "editorFocus",
                    "command": "vscode-project-image-browser.ViewImages",
                    "group": "z_commands"
                }
            ],
            "explorer/context": [
                {
                    "command": "vscode-project-image-browser.ViewImages",
                    "group": "z_commands"
                }
            ],
            "webview/context": [
                {
                    "command": "vscode-project-image-browser.CopyName",
                    "when": "webviewId == 'image-browser' && webviewSection == 'image'",
                    "group": "copy@1"
                },
                {
                    "command": "vscode-project-image-browser.CopyRelativePath",
                    "when": "webviewId == 'image-browser' && webviewSection == 'image'",
                    "group": "copy@2"
                },
                {
                    "command": "vscode-project-image-browser.CopyFullPath",
                    "when": "webviewId == 'image-browser' && webviewSection == 'image'",
                    "group": "copy@3"
                },
                {
                    "command": "vscode-project-image-browser.OpenImageFile",
                    "when": "webviewId == 'image-browser' && webviewSection == 'image'",
                    "group": "open@1"
                }
            ]
        },
        "configuration": {
            "title": "Project Image Browser",
            "properties": {
                "vscode-project-image-browser.includeFolders": {
                    "default": "",
                    "type": "string",
                    "description": "Only these folders will be searched. Wildcards NOT supported."
                },
                "vscode-project-image-browser.includeProjectFolders": {
                    "default": {},
                    "type": "object",
                    "description": "Folders that will be included in the search. Must be relative to a project folder. ; deliminated list."
                },
                "vscode-project-image-browser.excludeFolders": {
                    "default": "node_modules",
                    "type": "string",
                    "description": "Folders that will be ignored when found at the end of a path."
                },
                "vscode-project-image-browser.imageBackground": {
                    "default": "transparent",
                    "type": "string",
                    "description": "Color/pattern displayed behind images."
                },
                "vscode-project-image-browser.imageSize": {
                    "default": 100,
                    "type": "number",
                    "description": "Size of each image in the browser, in pixels."
                },
                "vscode-project-image-browser.lazyLoading": {
                    "default": true,
                    "type": "boolean",
                    "description": "Only load images when scrolled into view."
                },
                "vscode-project-image-browser.viewColumn": {
                    "default": "One",
                    "type": "string",
                    "enum": [
                        "Active",
                        "Beside",
                        "One",
                        "Two",
                        "Three",
                        "Four",
                        "Five",
                        "Six",
                        "Seven",
                        "Eight",
                        "Nine"
                    ],
                    "description": "The column of the editor in which to open the browser."
                },
                "vscode-project-image-browser.pathDeliminator": {
                    "default": "Default",
                    "type": "string",
                    "enum": [
                        "Default",
                        "/",
                        "\\"
                    ],
                    "description": "The path deliminator used when displaying and copying paths to clipboard."
                }
            }
        }
    },
    "scripts": {
        "install:all": "npm install && cd webview-ui && npm install",
        "build:webview": "cd webview-ui && npm run build",
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "package": "vsce package"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.46.0",
        "glob": "^7.1.6",
        "typescript": "^4.1.3",
        "open": "0.0.5"
    },
    "activationEvents": [
        "onCommand:vscode-project-image-browser.viewImages"
    ]
}